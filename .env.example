# =============================================================
# AI PPM Platform â€” Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================

# ---- App ----
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ---- Database (PostgreSQL) ----
DATABASE_URL=postgresql://ppm_user:ppm_password@localhost:5432/ppm_db?schema=public
POSTGRES_USER=ppm_user
POSTGRES_PASSWORD=ppm_password
POSTGRES_DB=ppm_db

# ---- Redis ----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ---- JWT ----
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ---- Anthropic AI ----
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-6
ANTHROPIC_MAX_TOKENS=4096

# ---- MinIO (Object Storage) ----
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ppm-documents

# ---- MinIO Console ----
MINIO_CONSOLE_PORT=9001

# ---- CORS ----
CORS_ORIGINS=http://localhost:3000

# ---- Rate Limiting ----
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ---- Logging ----
LOG_LEVEL=debug

# ---- Next.js Frontend ----
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=AI PPM Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
